#!/usr/bin/bash
# bin/compile <build-dir> <cache-dir> <env-path>

set -eo pipefail           # Fail fast and fail hard.

# Paths

BIN_DIR=$(cd $(dirname $0); pwd)    # absolute path
ROOT_DIR=$(dirname $BIN_DIR)
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

echo $(which python)
python --version

# Install pip
python $ROOT_DIR/get-pip.py

# Install virtualenv
pip install virtualenv
